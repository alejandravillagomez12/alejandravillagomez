#include <iostream>
using namespace std;
int main() {
    int N, invertido = 0;
    cout << "Ingresa un numero entero: ";
    cin >> N;
    int Nbackup = N;
    while (N > 0) {
        int digito = N % 10;
        invertido = invertido * 10 + digito;
        N /= 10;
    }
    cout << "El numero invertido de: " << Nbackup << " es: " << invertido << endl;

    return 0;
}
