#include <iostream>
using namespace std;
int main()
{
    int i, n, factorial;
    do {
        cout<< "Dame el valor de n:";
        cin>> n;
    } while (n < 0);
    factorial = 1;
    for ( i=1 ; i<=n ; i++)
    {
    factorial = factorial * i;
    }
    cout << " El factorial de n " << n << " es " << factorial << endl;       
     return 0;
}
